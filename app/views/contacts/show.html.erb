<div class="basic-grey">
<p id="notice"><%= notice %></p>

<h1><%= "#{t('messages.show')} #{@contact.model_name.human(count: 1)}" %></h1>

<p>
  <strong><%= @contact.class.human_attribute_name("name") %>:</strong>
  <%= @contact.name %>
</p>

<p>
  <strong><%= @contact.class.human_attribute_name("email") %>:</strong>
  <%= @contact.email %>
</p>

<p>
  <strong><%= @contact.class.human_attribute_name("kind") %>:</strong>
  <%= @contact.kind.description %>
</p>

<p>
  <strong><%= @contact.class.human_attribute_name("remark") %>:</strong>
  <%= @contact.remark %>
</p>

<%= link_to t('buttons.edit'), edit_contact_path(@contact) %> |
<%= link_to t('buttons.back'), contacts_path %>
</div>
